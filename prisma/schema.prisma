generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  userId         Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  password       String
  fullName       String?
  avatarUrl      String?
  role           Role     @default(USER)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


model Category {
  categoryId        Int       @id @default(autoincrement())
  name      String
  products  Product[]
}

model Product {
  productId           Int             @id @default(autoincrement())
  name         String
  code         String          @unique
  categoryId   Int
  unit         String
  Category     Category        @relation(fields: [categoryId], references: [categoryId])
  prices       ProductPrice[]
  stocks       StockTransaction[]
}

model ProductPrice {
  productPriceId  Int       @id @default(autoincrement())
  productId  Int
  price      Float
  priceType  String    // เช่น "cost" หรือ "sell"
  startDate  DateTime
  endDate    DateTime? // null = ใช้ถึงปัจจุบัน
  Product    Product   @relation(fields: [productId], references: [productId])
}

model StockTransaction {
  stockTransactionId         Int      @id @default(autoincrement())
  productId  Int
  date       DateTime
  txnType    String   // "in", "out"
  qty        Int
  price      Float    // ราคาต่อหน่วยสำหรับแต่ละ Transaction
  remark     String?
  Product    Product  @relation(fields: [productId], references: [productId])
}


enum Role {
  USER
  ADMIN
}
